{
	"name": "Data Analysis Env",
	"build": {"dockerfile": "Dockerfile"},

	// Install Dev Container Features
	"features": {
		"ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
			//"installTinyTex": true //Does not work on apple silicon
		},

		// Install R, JupyterLab, IRkernel, and other software
		"ghcr.io/rocker-org/devcontainer-features/r-rig:1": {
			"version": "none",
			"installJupyterlab": true,
			"vscodeRSupport": "full",
			"installDevTools": true,
			"installRMarkdown": true,
			"installRadian": true,
			"installREnv": true,
			"installVscDebugger": true
		},

		// Install Apt packages
			"ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
				"packages": [

					// System tools
					"curl", 
					"nano", 
					"neofetch", 
					"tmux",
					
					// Libraries
					"cmake",
					"build-essential",
					"libgsl-dev", 
					"libxt6", 
					"libudunits2-dev", 
					"libproj-dev", 
					"libglpk-dev", 
					"libgdal-dev", 

					// Python
					"python3.10-venv",

					// Sql
					"sqlite3",

					// Git
					"gh",
					
					// Fonts
					"fonts-roboto", 
					"fonts-open-sans", 
					"fonts-texgyre", 
					"fonts-firacode"
			]
		}
	},

	// Install extensions
	"customizations": {
		"vscode": {
			"extensions": [

				// git & github tools
				"donjayamanne.githistory",
				"GitHub.codespaces",
				"GitHub.copilot",
				"GitHub.copilot-chat",

				// vscode conveniences
				"peakchen90.open-html-in-browser",
				"kisstkondoros.vscode-gutter-preview",
				"cweijan.vscode-office",
				"mechatroner.rainbow-csv",
				"oderwat.indent-rainbow",
				
				// snippet creator
				"wware.snippet-creator",

				// data analysis tools
				"ms-toolsai.datawrangler",
				"helixquar.randomeverything",

				// language support
				"quarto.quarto",
				"Posit.shiny",
				"ms-toolsai.jupyter",
				"ms-toolsai.jupyter-renderers",
				"ms-python.python",
//				"ms-python.vscode-pylance",
//				"REditorSupport.r",
//				"RDebugger.r-debugger",
//				"Ikuyadeu.r-pack",
//				"DavidAnson.vscode-markdownlint",
//				"TakumiI.markdowntable",
//				"yy0931.vscode-sqlite3-editor",

				// theming
//				"GitHub.github-vscode-theme",
//				"cosmicsarthak.cosmicsarthak-neon-theme",
				"hassanoof.theme",
//				"PKief.material-icon-theme",
				"daylerees.rainglow",
//				"Equinusocio.vsc-material-theme",
				"danielgjackson.auto-dark-mode-windows",
				
				// vscode behavior
				"BriteSnow.vscode-toggle-quotes",
//				"vsls-contrib.codetour",
				"dqisme.sync-scroll",

				// fun
				"tonybaloney.vscode-pets"
			]
		},
		"settings": {
				"r.rterm.linux": "/usr/local/bin/radian",
				"r.bracketedPaste": true,
				"r.plot.useHttpgd": true
		}
	},

	// Forward Jupyter and RStudio ports
	"forwardPorts": [8787, 8888],
	"portsAttributes": {
		"8787": {
			"label": "Rstudio",
			"requireLocalPort": true,
			"onAutoForward": "ignore"
		},
		"8888": {
			"label": "Jupyter",
			"requireLocalPort": true,
			"onAutoForward": "ignore"
		}
	},

	// Use 'postAttachCommand' to run commands after the container is started.
	"postCreateCommand": "quarto install tinytex && R -q -e 'renv::repair()' && sudo rm -rf /usr/local/lib/R/site-library/* && sudo cp -R ./renv/library/*/* /usr/local/lib/R/site-library/"

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root
	// "remoteUser": "root"
}
